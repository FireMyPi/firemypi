#!/bin/sh

. /etc/sysconfig/rc
. $rc_functions

case "$1" in
    start)
        boot_mesg "Starting monitor-red0..."
        loadproc -b /root/monitor-red0

        ;;

    stop)
        boot_mesg "Stopping monitor-red0..."
        killproc /root/monitor-red0
        ;;

    restart)
        $0 stop
        sleep 1
        $0 start
        ;;

    status)
        statusproc /root/monitor-red0
        ;;

    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac
